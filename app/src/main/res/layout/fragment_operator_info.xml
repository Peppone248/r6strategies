<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".OperatoreInfo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_operator"
            android:layout_width="190dp"
            android:layout_height="190dp" />
        <TextView
            android:id="@+id/name_operator"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/scoutcond"
            android:gravity="center"
            android:text="VALKYRIE"
            android:textColor="@color/white"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flag_operator"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center" />

    <TextView
        android:id="@+id/name_affiliazione"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/scoutcond"
        android:gravity="center"
        android:shadowColor="@color/white"
        android:text="Navy Seal"
        android:textColor="@color/white"
        android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/scoutcond"
                android:shadowColor="@color/white"
                android:text="Corazza"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <RadioButton
                android:id="@+id/radio_cor1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:buttonTint="@color/white"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/radio_cor2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:buttonTint="@color/white"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/radio_cor3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:buttonTint="@color/white"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

             <TextView
                 android:layout_width="120dp"
                 android:layout_height="40dp"
                 android:layout_marginStart="10dp"
                 android:layout_marginTop="40dp"
                 android:fontFamily="@font/scoutcond"
                 android:shadowColor="@color/white"
                 android:text="Velocità"
                 android:textColor="@color/white"
                 android:textSize="40sp" />

            <RadioButton
                android:id="@+id/radio_speed1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:buttonTint="@color/white"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/radio_speed2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:buttonTint="@color/white"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/radio_speed3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:buttonTint="@color/white"
                android:clickable="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/scoutcond"
                android:shadowColor="@color/white"
                android:text="Difficoltà"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <RadioButton
                android:id="@+id/radio_diff1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:buttonTint="@color/white"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/radio_diff2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:buttonTint="@color/white"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/radio_diff3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:buttonTint="@color/white"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/scoutcond"
                android:shadowColor="@color/white"
                android:text="Utility:"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/name_ability"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/scoutcond"
                android:shadowColor="@color/white"
                android:text="NOME GADGET:"
                android:textColor="@color/white"
                android:textSize="30sp" />
            </LinearLayout>

        <ImageView
            android:id="@+id/image_ability"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:layout_gravity="center" />

    </LinearLayout>
</LinearLayout>
