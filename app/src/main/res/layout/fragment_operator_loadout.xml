<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OperatoreLoadout">

    <TextView
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/scoutcond"
        android:gravity="center"
        android:text="ARMA PRIMARIA"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/image_primary1"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="-50dp"
            android:background="@drawable/mpx" />

            <TextView
                android:id="@+id/name_primary1"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="MPX"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_primary2"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="200dp"
                android:background="@drawable/spas12" />

            <TextView
                android:id="@+id/name_primary2"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="SPAS-12"
                android:textSize="30sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="215dp"
        android:fontFamily="@font/scoutcond"
        android:gravity="center"
        android:text="ARMA SECONDARIA"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/image_secondary1"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/d50"/>

            <TextView
                android:id="@+id/name_secondary1"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="D-50"
                android:textSize="30sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="415dp"
        android:fontFamily="@font/scoutcond"
        android:gravity="center"
        android:text="GADGET"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_gadget1"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/impactgrenade"/>

            <TextView
                android:id="@+id/name_gadget1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="GRANATA A IMPATTO"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_gadget2"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="140dp"
                android:background="@drawable/nitrocell"/>

            <TextView
                android:id="@+id/name_gadget2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="155dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="NITRO-CELL"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/image_gadget3"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="270dp"
            android:background="@drawable/blackeye"/>

        <TextView
            android:id="@+id/name_gadget3"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="285dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/scoutcond"
            android:gravity="center"
            android:text="BLACKEYE"
            android:textSize="25sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>