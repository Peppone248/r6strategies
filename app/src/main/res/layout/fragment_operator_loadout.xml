<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OperatoreLoadout">

    <TextView
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/scoutcond"
        android:gravity="center"
        android:text="ARMA PRIMARIA"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/image_primary1"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="-50dp"
            android:background="@drawable/mpx" />

            <TextView
                android:id="@+id/name_primary1"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="MPX"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/name_primary2"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="-40dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="SPAS-12"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_primary2"
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="180dp"
                android:background="@drawable/spas12" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/scoutcond"
        android:gravity="center"
        android:text="ARMA SECONDARIA"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="188dp"
        android:background="@drawable/spas12"/>



</RelativeLayout>