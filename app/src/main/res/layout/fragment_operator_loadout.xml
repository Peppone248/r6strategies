<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OperatoreLoadout">

    <TextView
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/scoutcond"
        android:gravity="center"
        android:text="ARMA PRIMARIA"
        android:textSize="35sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/image_primary"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/mpx" />

            <TextView
                android:id="@+id/name_primary"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="160dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="MPX"
                android:textSize="30sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/scoutcond"
        android:gravity="center"
        android:text="ARMA SECONDARIA"
        android:textSize="35sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/image_secondary"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="130dp"
            android:background="@drawable/d50"/>

            <TextView
                android:id="@+id/name_secondary"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="D-50"
                android:textSize="30sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/scoutcond"
        android:gravity="center"
        android:text="GADGET"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_gadget"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="135dp"
                android:background="@drawable/nitrocell"/>

            <TextView
                android:id="@+id/name_gadget"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/scoutcond"
                android:gravity="center"
                android:text="NITRO-CELL"
                android:textSize="25sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>